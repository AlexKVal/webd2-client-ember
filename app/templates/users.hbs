<div class="row">

  <div class="col-md-6">
    <h3>List of users</h3>

    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>id</th>
          <th>name</th>
          <th>password</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |user|}}
        <tr>
          <td>{{user.id}}</td>
          <td>{{user.name}}</td>
          <td>{{user.password}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
