<div class="row">
  <div class="col-sm-6">
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>id</th>
          <th>name</th>
          <th>password</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |user|}}
        <tr>
          <td>{{user.id}}</td>
          <td>{{user.name}}</td>
          <td>{{user.password}}</td>
          <td>{{#link-to 'users.edit' user class='btn btn-success btn-xs'}}edit{{/link-to}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
