<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">{{model.name}}</h3>
  </div>
  <div class="panel-body">
    <div class="input-group">
      {{input value=userPassword enter="passwordSubmit"
        type="text" class="form-control" placeholder="password"
        autocapitalize="off" autocorrect="off"}}
      <span class="input-group-btn">
        <button {{action "passwordSubmit" model userPassword}}
          class="btn btn-success" type="button">Sign In</button>
      </span>
    </div>
  </div>
</div>
