{{#if errorMessage}}
  <div class="alert alert-danger">
    <strong>Login failed:</strong> {{errorMessage}}
  </div>
{{/if}}

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">{{model.name}}</h3>
  </div>
  <div class="panel-body">
    <div class="input-group">
      {{input value=password enter="passwordSubmit"
        type="text" class="form-control" placeholder="password"
        autocapitalize="off" autocorrect="off"}}
      <span class="input-group-btn">
        <button {{action "authenticate" model.id password}}
          class="btn btn-success" type="button">Sign In</button>
      </span>
    </div>
  </div>
</div>
