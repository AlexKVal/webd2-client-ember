<div class="list-group">
  {{#each model as |user|}}
    {{#link-to 'user-accounts.edit' user class="list-group-item"}}
      <div class="row">
        <div class="col-xs-8 bg-info"><strong><small>{{user.name}}</small></strong></div>
        <div class="col-xs-4 text-right"><small><em>{{user.password}}</em></small></div>
      </div>
      <div class="row">
        <div class="col-xs-6"><small>{{user.rights}}</small></div>
        <div class="col-xs-6 text-right"><small>{{user.group.name}}</small></div>
      </div>
    {{/link-to}}
  {{/each}}
</div>
