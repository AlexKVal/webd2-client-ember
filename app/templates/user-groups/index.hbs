<div class="list-group">
  {{#each sortedUnits as |group|}}
    <div class="list-group-item row u-condensed">
      <div class="row">
        {{#link-to 'user-groups.edit' group tagName="div" class="col-xs-11 u-no-lr-padding"}}
          <div class="col-xs-8"><strong>{{group.name}}</strong></div>
          <div class="col-xs-4 text-right">{{group.users.length}}</div>
          <div class="col-xs-12"><small><em>{{group.info}}</em></small></div>
        {{/link-to}}
        <div class="col-xs-1 u-no-lr-padding">
          {{#if deleted}}
            <button {{action 'undelete' group}} class="btn btn-success btn-xs btn-vert">+</button>
          {{else if group.users.length}}
            <button disabled=true class="btn btn-default btn-xs btn-vert">&times;</button>
          {{else}}
            <button {{action 'delete' group}}
              class="btn btn-danger btn-xs btn-vert">&times;</button>
          {{/if}}
        </div>
      </div>
    </div>
  {{/each}}
</div>

<nav class="navbar navbar-fixed-bottom" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <div class="btn-group btn-group-justified">
        {{#link-to 'user-groups.new'
          class="btn btn-info navbar-btn"}}New{{/link-to}}

        {{#if deleted}}
          {{#link-to 'user-groups' (query-params deleted=false)
            class="btn btn-success navbar-btn"}}Active{{/link-to}}
        {{else}}
          {{#link-to 'user-groups' (query-params deleted=true)
            class="btn btn-default navbar-btn"}}Deleted{{/link-to}}
        {{/if}}
      </div>
    </div>
  </div>
</nav>
